<!-- 		on s.zone_id = z.zone_id -->
<!-- 		where s.zone_id=#{zone_id} AND  -->

	<select id="getSeatsId" resultType="com.itwillbs.domain.SeatDTO">
		select s.seat_id, s.seat_row, s.seat_num, s.seat_id, s.zone_id, z.zone_ty
		from seat s
		join zone z
		on s.zone_id = z.zone_id
		join game_schedule g
		on z.stad_id = g.stad_id
		where s.zone_id=#{zone_id} AND g.game_id=#{game_id}
	</select>
	
	<!-- 예매 가능 좌석 및 여부 출력  -->
	<select id="getSeatBooked" resultMap="seatBookMap">
		select s.seat_row, s.seat_num, s.seat_id, s.zone_id, sb.booked_at, sb.game_id
		from seat s
		join seat_book sb
		on s.seat_id = sb.seat_id
		where s.zone_id=#{zone_id} and sb.game_id=#{game_id}
	</select>
			
